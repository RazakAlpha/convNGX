{
  "name": "convex-angular-resource",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve example-chat",
    "build": "ng build alpha-convngx",
    "build:example": "ng build example-chat",
    "watch": "ng build alpha-convngx --watch --configuration development",
    "test": "ng test",
    "dev": "convex dev",
    "prepublish:lib": "npm run build",
    "publish:lib": "npm run prepublish:lib && cd dist/convngx && npm publish --access public"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": false,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@convex-dev/better-auth": "^0.7.18",
    "better-auth": "^1.3.8",
    "convex": "^1.27.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.1.0",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.2"
  }
}
